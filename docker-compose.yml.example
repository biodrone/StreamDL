# This is an example of the necessary docker-compose config
version: '3'

services:
  server:
    image: dangeroustech/streamdl:server_latest
    restart: always
    environment:
      - STREAMDL_GRPC_PORT=50051
  client:
    image: dangeroustech/streamdl:client_latest
    restart: always
    volumes:
      - ./downloads/incomplete:/app/dl # in-progress downloads location
      - ./downloads/complete:/app/out # completed downloads location
      - ./config.yml:/app/config.yml # config file
    environment:
      - TICK_TIME=10 # time to repeat, in seconds
      - LOG_LEVEL=INFO # log level, defaults to DEBUG
      - STREAMDL_GRPC_ADDR=server
      - STREAMDL_GRPC_PORT=50051
    depends_on:
      - server
